@{
    ViewBag.Title = "Thêm Nhân Viên";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<div class="container">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <form action="@Url.Action("ThemNhanVien", "NV")" method="post">
        <div class="row">
            <div class="col-md-6">
                <div class="card" style="height:920px">
                    <div class="card-body">
                        <h4 class="card-title">Thông tin cá nhân</h4>

                        <div class="mb-3">
                            <label for="firstName" class="form-label">Họ và tên đệm</label>
                            <input type="text" class="form-control" id="firstName" name="firstName" placeholder="Nhập họ và tên đệm" required>
                            <div class="invalid-feedback">Họ và tên đệm không được để trống.</div>
                        </div>

                        <div class="mb-3">
                            <label for="lastName" class="form-label">Tên</label>
                            <input type="text" class="form-control" id="lastName" name="lastName" placeholder="Nhập tên" required>
                            <div class="invalid-feedback">Tên không được để trống.</div>
                        </div>

                        <div class="mb-3">
                            <label for="birthDate" class="form-label">Ngày sinh</label>
                            <input type="date" class="form-control" id="birthDate" name="birthDate" required>
                            <div class="invalid-feedback">Ngày sinh không hợp lệ.</div>
                        </div>

                        <div class="mb-3">
                            <label for="address" class="form-label">Địa chỉ</label>
                            <input type="text" class="form-control" id="address" name="address" placeholder="Nhập địa chỉ" required>
                            <div class="invalid-feedback">Địa chỉ không được để trống.</div>
                        </div>

                        <div class="mb-3">
                            <label for="phoneNumber" class="form-label">Số điện thoại</label>
                            <input type="tel" class="form-control" id="phoneNumber" name="phoneNumber" placeholder="Nhập số điện thoại" pattern="^\d{10}$" required>
                            <div class="invalid-feedback">Số điện thoại phải là 10 chữ số.</div>
                        </div>

                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" class="form-control" id="email" name="email" placeholder="Nhập email" required>
                            <div class="invalid-feedback">Email không hợp lệ.</div>
                        </div>

                        <div class="mb-3">
                            <label for="CCCD" class="form-label">CCCD</label>
                            <input type="text" class="form-control" id="CCCD" name="CCCD" placeholder="Nhập CCCD" pattern="^\d{12}$" required>
                            <div class="invalid-feedback">CCCD phải có 12 chữ số.</div>
                        </div>

                        <div class="mb-3">
                            <label for="NoiCap" class="form-label">Nơi cấp CCCD</label>
                            <input type="text" class="form-control" id="NoiCap" name="NoiCap" placeholder="Nhập nơi cấp CCCD" required>
                            <div class="invalid-feedback">Nơi cấp không được để trống.</div>
                        </div>

                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card" style="height:920px">
                    <div class="card-body">
                        <h4 class="card-title">Thông tin công việc</h4>

                        <div class="mb-3">
                            <label for="NgayDK" class="form-label">Ngày đăng ký</label>
                            <input type="date" class="form-control" id="NgayDK" name="NgayDK" required>
                            <div class="invalid-feedback">Ngày đăng ký không hợp lệ.</div>
                        </div>

                        <div class="mb-3">
                            <label for="NgayKi" class="form-label">Ngày kí hợp đồng</label>
                            <input type="date" class="form-control" id="NgayKi" name="NgayKi" required>
                            <div class="invalid-feedback">Ngày kí hợp đồng không hợp lệ.</div>
                        </div>

                        <div class="mb-3">
                            <label for="NgayHetHan" class="form-label">Ngày hết hạn hợp đồng</label>
                            <input type="date" class="form-control" id="NgayHetHan" name="NgayHetHan" required>
                            <div class="invalid-feedback">Ngày hết hạn không hợp lệ.</div>
                        </div>

                        <div class="mb-3">
                            <label for="ChucVu" class="form-label">Chức vụ</label>
                            <input type="text" class="form-control" id="ChucVu" name="ChucVu" placeholder="Nhập chức vụ" required>
                            <div class="invalid-feedback">Chức vụ không được để trống.</div>
                        </div>

                        <div class="mb-3">
                            <label for="GioiTinh" class="form-label">Giới tính</label>
                            <input type="text" class="form-control" id="GioiTinh" name="GioiTinh" placeholder="Nhập giới tính" required>
                            <div class="invalid-feedback">Giới tính không được để trống.</div>
                        </div>

                        <div class="mb-3">
                            <label for="DanToc" class="form-label">Dân tộc</label>
                            <input type="text" class="form-control" id="DanToc" name="DanToc" placeholder="Nhập dân tộc" required>
                            <div class="invalid-feedback">Dân tộc không được để trống.</div>
                        </div>

                        <div class="mb-3">
                            <label for="HocVan" class="form-label">Học vấn</label>
                            <input type="text" class="form-control" id="HocVan" name="HocVan" placeholder="Nhập học vấn" required>
                            <div class="invalid-feedback">Học vấn không được để trống.</div>
                        </div>

                        <div class="mb-3">
                            <label for="DepartmentID" class="form-label">Mã phòng ban</label>
                            <input type="text" class="form-control" id="DepartmentID" name="DepartmentID" placeholder="Nhập mã phòng ban" required>
                            <div class="invalid-feedback">Mã phòng ban không được để trống.</div>
                        </div>

                        <div class="mb-3">
                            <label for="TrangThai" class="form-label">Trạng thái</label>
                            <input type="text" class="form-control" id="TrangThai" name="TrangThai" placeholder="Nhập trạng thái" required>
                            <div class="invalid-feedback">Trạng thái không được để trống.</div>
                        </div>

                    </div>
                </div>
            </div>

            <div class="row" style="margin-top:20px">
                <div class="col-md-12" style="text-align: right;">
                    <button type="submit" class="btn btn-primary">Thêm nhân viên</button>
                </div>
            </div>
        </div>
    </form>
</div>

<script>
    document.querySelectorAll("input").forEach(input => {
        input.addEventListener("input", () => {
            if (input.checkValidity()) {
                input.classList.remove("is-invalid");
                input.classList.add("is-valid");
            } else {
                input.classList.remove("is-valid");
                input.classList.add("is-invalid");
            }
        });
    });
</script>
